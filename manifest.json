{
    "manifest_version": 3,
    "name": "Shorts Counter",
    "version": "1.0",
    "description": "Conta quantos Shorts do YouTube e Reels do Instagram vocÃª assistiu.",
    "permissions": ["storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/shorts/*",
          "https://www.instagram.com/reels/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  