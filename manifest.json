{
  "manifest_version": 3,
  "name": "Shorts Counter",
  "version": "1.1.0",
  "description": "Conta quantos Shorts do YouTube e Reels do Instagram você assistiu. Acompanhe seu consumo de conteúdo de forma simples e eficiente.",
  "author": "Caue Reis",
  "homepage_url": "https://github.com/caue-r",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shorts Counter - Ver contador",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["*://*.youtube.com/*", "*://*.instagram.com/*"]
    }
  ]
}
  